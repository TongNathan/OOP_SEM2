<Window x:Class="Basic_CRUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Basic_CRUD"
        mc:Ignorable="d"
        Title="MainWindow" Height="347" Width="619.5">
    <Grid>
        <Button Content="Add Task" HorizontalAlignment="Left" Margin="415,10,0,0" VerticalAlignment="Top" Width="141" Height="34" Click="AddTask"/>
        <Button Content="Delete Task" HorizontalAlignment="Left" Margin="415,52,0,0" VerticalAlignment="Top" Width="141" Click="DeleteTask" Height="30"/>
        <Button Content="Edit Task" HorizontalAlignment="Left" Margin="415,89,0,0" VerticalAlignment="Top" Width="141" Click="EditTask" Height="30"/>
        <ListBox x:Name="ListBoxTasks" HorizontalAlignment="Left" Height="207" Margin="10,52,0,0" VerticalAlignment="Top" Width="400" SelectionChanged="ListBoxTasks_SelectionChanged"/>
        <TextBox x:Name="TextBoxTasks" HorizontalAlignment="Left" Height="34" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" TextChanged="TextBoxTasks_TextChanged"/>

    </Grid>
</Window>
